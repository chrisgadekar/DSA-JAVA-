public class main{
    public static void main(String[] args) {
        
     
        int[] arr = {2,1,3,4}; int n=4;
        System.out.println(isSorted(arr, n));
    }
    static boolean isSorted(int[] arr,int n){
        for(int i=0; i < arr.length; i++){
            for(int j= i+1; j < n; j++){
                if(arr[i] > arr[j])
                return false;
           } 

        }
        return true;
    }
    
    
}
