public class main{
    public static void main(String[] args) {
     int[] arr = {7,8,4,5,6,8,2};
     System.out.println(min(arr));
    }
    static int min(int[] arr){
        int ans = arr[0];
        for (int i = 1; i < arr.length; i++) {
            if (arr[i] < ans) {
                ans = arr[i];
            }
        }
        return ans;
    }
}
